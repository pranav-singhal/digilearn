<div class="books">
<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table style="color: black;">
  <thead>
    <tr>
      <th>Name</th>
      <th>Seller price</th>
     <!--  <th>User price</th> -->
      <th>Qunatity in stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
  <%if book.seller_id==current_seller.id%>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.seller_price %></td>
    <!--     <td><%= book.user_price %></td> -->

        <td><%= book.qunatity_in_stock %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%end%>
  </tbody>
</table>

<br>

<%= link_to 'New Book', seller_path %>
<%= link_to "back to index", url_for(controller: :home, action: :seller)%>
</div>
