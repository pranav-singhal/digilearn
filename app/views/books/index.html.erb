<div class="books">
<p id="notice"><%= notice %></p>
<aside>
  <nav>
    <%if SellerProfile.where(seller_id: current_seller.id).first %>
    <ul>
      <li><img src="/logo.png"/></li>
      <li id="myBooks">  <i class="fa fa-book" aria-hidden="true"></i><br />
        <%= link_to 'my books', books_path %></li>
      <li> <i class="fa fa-user" aria-hidden="true"></i><br />
         <%= link_to "your seller profile", seller_profile_path(id: SellerProfile.where(seller_id:current_seller.id).first.id)%></li>
      <li> <i class="fa fa-sign-out" aria-hidden="true"></i><br />
         <%=link_to "signout",destroy_seller_session_path, method: :delete%></li>
         <li><i class="fa fa-plus" aria-hidden="true"></i><br />
           <%= link_to 'Add a Book', seller_path %></li>
      <li><i class="fa fa-arrow-left" aria-hidden="true"></i><br />
        <%= link_to "back to index", url_for(controller: :home, action: :seller)%></li>

    </ul>
  </nav>
  <%end%>
</aside>
<main>

<h1>Books</h1>

<table style="color: black;">
  <thead>
    <tr>
      <th>Name</th>
      <th>Seller price</th>
     <!--  <th>User price</th> -->
      <th>Qunatity in stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
  <%if book.seller_id==current_seller.id%>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.seller_price %></td>
    <!--     <td><%= book.user_price %></td> -->

        <td><%= book.qunatity_in_stock %></td>
        <td><%= link_to 'Edit book details', edit_book_path(book) %></td>
        <td><%= link_to 'Remove book from stock', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%end%>
  </tbody>
</table>

<br>

</main>

</div>
