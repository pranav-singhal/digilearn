<p id="notice"><%= notice %></p>

<h1>Course Makers for <%=@course.name%></h1>

<table>
  <thead>
    <tr>
      <th>Pg no</th>
      <th>Pg name</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_makers.each do |course_maker| %>
      <tr>
        <td><%= course_maker.pg_no %></td>
        <td><%= course_maker.pg_name %></td>
        <td><%= link_to 'Edit', edit_course_course_maker_path(@course.id,course_maker) %></td>
        <td><%= link_to 'Destroy', course_course_maker_path(@course,course_maker), method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a new page', new_course_course_maker_path(@course) %>
<%= link_to "back to courses", courses_path%>
<%if @course_makers.empty?%>
<p>you dont have any pages so u cant preview</p>
<%else%>
<%= link_to "preview course", course_path(@course_makers.first.course)%>
<%end%>
