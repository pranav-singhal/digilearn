<p id="notice"><%= notice %></p>

<h1>Seller Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Seller</th>
      <th>Name</th>
      <th>Address</th>
      <th>Credit</th>
      <th>Debit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seller_profiles.each do |seller_profile| %>
      <tr>
        <td><%= seller_profile.seller %></td>
        <td><%= seller_profile.name %></td>
        <td><%= seller_profile.address %></td>
        <td><%= seller_profile.credit %></td>
        <td><%= seller_profile.debit %></td>
        <td><%= link_to 'Show', seller_profile %></td>
        <td><%= link_to 'Edit', edit_seller_profile_path(seller_profile) %></td>
        <td><%= link_to 'Destroy', seller_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

