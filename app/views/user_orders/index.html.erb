<p id="notice"><%= notice %></p>

<h1>User Orders</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>User price per unit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_orders.each do |user_order| %>
      <tr>
        <td><%= user_order.user %></td>
        <td><%= user_order.product_id %></td>
        <td><%= user_order.quantity %></td>
        <td><%= user_order.user_price_per_unit %></td>
        <td><%= link_to 'Show', user_order %></td>
        <td><%= link_to 'Edit', edit_user_order_path(user_order) %></td>
        <td><%= link_to 'Destroy', user_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

