<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%puts @teacher.email%>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Change Course Name', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to course.statusString,url_for(controller: :courses, action: :statusChange, course_id: course.id),id: course.id, method: :post, data: { confirm: course.alertString }, remote: true%></td>

      </tr>
    <%end%>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>

<%= link_to "sign out", destroy_teacher_session_path, method: :delete%>
